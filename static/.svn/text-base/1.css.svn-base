@font-face {
    font-family: 'ArrowFont';
    src: url('fonts/dtpdingbats-webfont.eot');
    src: local('☺'), 
        url('fonts/dtpdingbats-webfont.woff') format('woff'), 
        url('fonts/dtpdingbats-webfont.ttf') format('truetype'), 
        url('fonts/dtpdingbats-webfont.svg') format('svg');
    font-weight: normal;
    font-style: normal;
}

/*body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,textarea,p,blockquote,th,td {
	margin:0;
	padding:0;
}*/
 
body {
    background: url(cutebarbg.jpg) repeat;
}
 
article {
    font-family: baskerville; 
    font-size: 16px; 
    margin-top: 10px;
}

p.tutorial a {
	line-height: 26px;
	font-size: 20px;
	color: white;
	font-weight: bold;
	text-shadow: 0 -1px 1px rgba(0,0,0,0.5);
	padding: 0;
	font-family: helvetica, arial, sans-serif;
}

p.tutorial {
	float: right;
	width: 300px;
	color: white;
	padding: 15px;
	font-family: helvetica, arial, sans-serif;
}
 
p {
    line-height: 25px;
    color: white;
    text-shadow: 0 -1px 1px rgba(0,0,0,0.5);
    padding: 0 20px;
    font-family: Baskerville;
}
 
#popup {
    top: -10px;
    width: 100%; 
    padding: 20px;
    background: url(c_bar_bg.jpg)  left bottom repeat-x;
    display: block;
    position: fixed;
    /*fixed  还有relative会上下移动absolute;不会动*/
}
 
#popup p {
    margin-left: 15px;
    text-shadow: 0 1px 1px rgba(255,255,255,0.8);
    font-size: 13pt;    
    color: #34332d;
}
 
a.hiden {
    color: #34332d; 
    text-decoration: none;
    font-family: 'ArrowFont'; 
    -webkit-transform:rotate(-90deg); 
    font-size: 30px; 
    position: absolute;
    text-shadow: -1px 0px 1px rgba(255,255,255,0.8);
    margin-top: -0px;
}
 
a.hiden:hover {
    color: #c44f21; 
}
 
span.showpop {
    display: block;
    position: fixed;
    -webkit-transform:rotate(90deg);
    margin-top: -70px;
}
 
a.showpoplink {
    background: #dde1c1;
    padding: 5px 10px 5px 40px;
    font-family: 'ArrowFont'; 
    font-size: 30px; 
    margin-left: 5px;
    border: 4px solid #f44f21;
    text-decoration: none;
    border-radius: 10px;
    -webkit-background-clip: padding-box;
    color: #34332d;
}
 
a.showpoplink:hover {
    color: #c44f21; 
}
img {
    float: left; 
    padding: 10px 20px 10px 20px;
}